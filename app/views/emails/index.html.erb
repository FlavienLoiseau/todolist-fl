<div class="container">
  <%= link_to "Recevoir un email", emails_path(), method: :post, remote: true, :class => "btn btn-success mb-4" %>

  <div class="row">
    <div class="col-4">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">Liste des emails</th>
        </tr>
      </thead>
      <tbody id = mailbox>
        <% @emails.each do |email| %>
          <tr>
            <td><%= link_to email.object, email_path(email), class: "text-decoration-none text-dark", remote: true %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>

    <div class="col-8">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">Email sélectionné</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'emails/show' %>
      </tbody>
    </table>
    </div>
  </div>
</div>